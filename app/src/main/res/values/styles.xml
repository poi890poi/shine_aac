<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SacTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SacTableCell" parent="SacTableRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_border</item>
    </style>
    <style name="SacTableCell.Disabled">
        <item name="android:background">@drawable/cell_border_disabled</item>
    </style>
    <style name="SacTableCell.Highlighted">
        <item name="android:background">@drawable/cell_border_highlighted</item>
    </style>
    <style name="SacTableCell.Selected">
        <item name="android:background">@drawable/cell_border_selected</item>
    </style>
    <style name="TextSentence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>